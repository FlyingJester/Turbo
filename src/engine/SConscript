

Import("environment")

libturbo = environment.SharedLibrary("turbo", ["plugin.cpp", "script.cpp", "plugloader.cpp"], CPPDEFINES=["TURBO_INTERNAL=1"], LIBS=["mozjs-"])
turbo = environment.Program("turbo", ["engine.cpp"], LIBS=["mozjs-", "turbo"])

install_libturbo = environment.Install(environment["OURLIBPATH"], libturbo)

Depends(turbo, install_libturbo)

Return("turbo")
